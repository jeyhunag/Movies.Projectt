@model UserRoleViewModel
@{
    ViewData["Title"] = "Create";
}
@section addcss{
    <style>
        .formC label {
            color: white;
        }

        .formC input {
            color: black;
            background-color: white;
        }

        .creH1 {
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .create-account-sign {
            display: flex;
            align-items: end;
            justify-content: end;
        }
    </style>

}

<div class="row" style="display:flex; align-items:center; justify-content:center;">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top:95px;">
        <div class="create-account-sign">
            <a asp-action="UserIndex"><i class="fa fa-sign-in big-icon"></i></a>
        </div>
        <h1 class="display-3 creH1">Create Country</h1>
        <form class="formC" method="post" asp-action="RoleAssign" method="post" >
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group-inner">
                <div class="row" style="display:flex; align-items:center; justify-content:center;">

                    <div class="form-group col-lg-4">
                        <input asp-for="UserId"  type="hidden" class="form-control" />
                        <label asp-for="RoleName" for="Name" class="control-label ">Create Role</label>
                       <select asp-for="RoleName"
                                class="form-control"
                                asp-items="@(new SelectList(Model.Roles, nameof(RoleViewModel.Name), nameof(RoleViewModel.Name)))">
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group mt-4 text-center">
                <button type="submit" value="Create" class="btn btn-custon-four btn-default btn-lg">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>