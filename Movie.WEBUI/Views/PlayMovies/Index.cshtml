@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}

@section Scripts{

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="~/css/playmovies.css" rel="stylesheet" asp-append-version="true" />
    <style>
        /* modal Share */
        .modalPlayMovies {
            top: 150px;
        }

        .modal-title-playmovies {
            color: #202020;
        }

        .btn-play-close {
            color: white !important;
            font-weight: bolder !important;
        }

            .btn-play-close:hover {
                color: white !important;
            }

        .modal-body-icon a i {
            font-size: 40px !important;
            color: white;
        }


        /* Modal Trailer */

        .modal-content-playMovies {
            border-radius: 5px;
            top: 100px !important;
            width: 600px;
            background: #202020;
        }

        .modal-body-playmovies {
            margin-top: -40px;
        }

            .modal-body-playmovies > video {
                width: 100% !important;
                height: 100% !important;
            }
    </style>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
        integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.img-div div').hover(function () {

                $(this).children().css({ 'transform': 'scale(1.2)', 'transition': 'transform 0.5s', 'z-index': '1' });

            }, function () {
                $(this).children().css({ 'transform': 'scale(1)', 'z-index': '0' });
            });

            $('.img-div > div').mouseover(function () {
                $(this).addClass("active");
            });

            $('.img-div > div').mouseleave(function () {
                $(this).removeClass("active");
            });
        });
    </script>
}
<main>

    <video controls>
        <source src="~/@Model.MovieC.MovieVideo" type="video/mp4">

    </video>
    <div class="container PMovies">
        <div class="MoviesFoto">
            <img src="~/@Model.MovieC.Img" alt="foto" class="img-fluid">
        </div>
        <div class="text mt-5">
            <h1>@Model.MovieC.Name</h1>
            <div class="SpanMovies my-5">
                <span><i class="bi bi-person-fill"></i>@Model.MovieC.Age</span>
                <span><i class="bi bi-clock"></i>@Model.MovieC.MovieTime</span>
                <span><i class="bi bi-emoji-smile"></i>@Model.MovieC.Year</span>
                <span><i class="bi bi-activity"></i>@Model.MovieC.GenresCategoryId</span>
                <span><i class="bi bi-globe"></i>@Model.MovieC.CountryCategoryId</span>
            </div>
            <div class="MoviesP">
                <p>@Model.MovieC.Description</p>
                <h4 class="my-5">Director:@Model.MovieC.Director</h4>
            </div>
            <div class="BMovies">
                <button type="button" class="btn px-5 "><i class="bi bi-play-fill me-2 "></i>Play</button>
                <button type="button" class="btn px-5"><i class="bi bi-plus me-2"></i>MY List</button>
                <button type="button" class="btn px-5" data-bs-toggle="modal" data-bs-target="#trailer">
                    <i class="bi bi-camera-video-fill me-2"></i>
                    Trailer
                </button>
                <button type="button" class="btn px-4" data-bs-toggle="modal" data-bs-target="#myModal">
                    <i class="bi bi-share-fill me-2"></i>
                    Share
                </button>

                <!-- The Modal Share-->
                <div class="modal modalPlayMovies" id="myModal">
                    <div class="modal-dialog">
                        <div class=" modal-content-playMovies">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title modal-title-playmovies fw-bolder text-white">Share</h4>
                                <button type="button" class="btn-close btn-play-close" data-bs-dismiss="modal">
                                </button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body-icon d-flex justify-content-around ">
                                <a class="my-5"><i class="bi bi-facebook "></i></a>
                                <a class="my-5"><i class="bi bi-twitter"></i></a>
                                <a class="my-5"><i class="bi bi-telegram"></i></a>
                                <a class="my-5"><i class="bi bi-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- The Modal Trailer-->
                <div class="modal" id="trailer">
                    <div class="modal-dialog">
                        <div class="modal-content modal-content-playMovies">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title modal-title-playmovies fw-bolder text-white">Trailer</h4>
                                <button type="button" class="btn-close btn-play-close" data-bs-dismiss="modal"></button>
                            </div>

                            <!-- Modal body -->
                            <div class=" modal-body-playmovies">
                                <video controls>
                                    <source src="~/@Model.MovieC.Trailer" type="video/mp4">
                                </video>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--RELATED MOVIES-->
    <div class="container">
        <div class="RelatedMovies">
            <h2 class="text-white fw-bolder">RELATED MOVIES</h2>
            <hr id="hr_color">
            <div class="images">
                <div class=" image featured active text-white">
                        @await Component.InvokeAsync("Movie", new{categoryId = Model.MovieC.GenresCategoryId})                    
                </div>
            </div>
        </div>
    </div>
</main>

